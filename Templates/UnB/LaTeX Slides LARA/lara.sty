% Frame with Content Table before each section
\newcommand{\makesummary}[1]{%
\AtBeginSection[]{%
  \ifthenelse{\the\beamer@coveringdepth=0}
    {\begin{frame}{#1}}%
    {\begin{frame}{Summary}}%
  \tableofcontents[currentsection]%
  \end{frame}}%
}

